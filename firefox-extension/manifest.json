{
  "manifest_version": 3,
  "name": "TMDB Movie & TV Show Search",
  "version": "2.0",
  "description": "Search movies and TV shows to get TMDB IDs for emed video players",
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  "host_permissions": [
    "https://api.themoviedb.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Search Movies & TV Shows"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tmdb-search@yourdomain.com",
      "strict_min_version": "109.0"
    }
  }
}