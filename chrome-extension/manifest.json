
{
  "manifest_version": 3,
  "name": "TMDB Movie & TV Show ID Search",
  "version": "1.0",
  "description": "Search movies and TV shows to get TMDB IDs for embed video players",
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  "host_permissions": [
    "https://api.themoviedb.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Search Movies & TV Shows"
  },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }